
@{
    ViewBag.Title = "SuaBV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-sm-12">
            <div class="box box-primary" ng-controller="SuaBVController">
                <div class="box-header with-border">
                    <h3 class="box-title">Sửa bài viết</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Mã bài viết</label>
                            <input ng-model="bv.MaBV" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Mã danh mục</label>
                            <select ng-change="getdmc(bv.MaDM)" ng-model="bv.MaDM">
                                <option ng-repeat="items in listmaDM" value="{{items.MaDM}}">{{items.TenDM}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Mã danh mục con</label>
                            <select ng-model="bv.MaDMC">
                                <option ng-repeat="items in listdmc" value="{{items.madmc}}">{{items.tendmc}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tài khoản US</label>
                            <select ng-model="bv.TaiKhoanUS">
                                <option ng-repeat="items in listUS" value="{{items.taiKhoanUS}}">{{items.tenUser}}</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tiêu Đề</label>
                            <input ng-model="bv.TieuDe" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Hình ảnh</label>
                            <div>
                                <input class="col-6" type="file" onchange="change(this)" id="exampleInputFile">
                                <img class="col-6" id="img" style="width: 100px;" src="{{bv.HinhAnh}}" />
                            </div>

                        </div>
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <select ng-model="bv.TrangThai">
                                <option value="{{bv.TrangThai}}" selected ="selected">{{bv.TrangThai}}</option>
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Thời gian đăng</label>
                            <input ng-model="bv.ThoiGianDang" type="date" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Nội dung nhỏ</label>
                            <input ng-model="bv.NoiDungCon" type="text" class="form-control">
                        </div>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button ng-click="suabv()" class="btn btn-primary">Sửa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>


